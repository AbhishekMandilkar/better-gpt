{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalDependencies": ["./apps/web/.env*", "**/.env*"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "./apps/web/.env*"],
			"outputs": ["dist/**", ".next/**"],
			"env": [
				"DATABASE_URL",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"POLAR_SUCCESS_URL",
				"CORS_ORIGIN",
				"OPENROUTER_API_KEY"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"env": ["DATABASE_URL"]
		},
		"db:generate": {
			"cache": false
		}
	}
}
